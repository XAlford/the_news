<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/top_stories_root"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:elevation="1.3dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/top_stories_image"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/top_stories_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/top_stories_image"
        android:maxLines="4"
        android:textSize="16sp"
        android:textStyle="bold"
        android:title="Title"/>

    <ImageView
        android:id="@+id/clock"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/top_stories_image"
        android:src="@mipmap/ic_query_builder_black_24dp"
        android:tint="@color/blue_clock"/>

    <TextView
        android:id="@+id/top_stories_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/clock"
        android:textColor="@color/textColor"
        android:title="8h ago"/>

    <ImageView
        android:id="@+id/top_stories_divisor"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/top_stories_date"
        android:background="@color/textColor"/>

    <ImageView
        android:id="@+id/top_stories_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="13dp"
        android:src="@mipmap/ic_favorite_border_black_24dp"
        android:tint="@color/textColor"/>

    <TextView
        android:id="@+id/top_stories_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/top_stories_heart"
        android:layout_toRightOf="@id/top_stories_divisor"
        android:maxLines="1"
        android:textColor="@color/categoryColor"
        android:textStyle="bold"
        android:title="Category"/>


    <ImageView
        android:id="@+id/top_stories_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_share_white_24dp"
        android:tint="@color/textColor"/>


</RelativeLayout>